{
  "openapi": "3.0.2",
  "info": {
    "title": "Cuanmax RESTful API",
    "version": "1.0.0",
    "description": "RESTful API for Cuanmax Application",
    "contact": {
      "name": "Iwan Suryaningrat",
      "email": "iwansuryaningrat@cuanmax.id"
    },
    "license": {
      "name": "APACHE 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0"
    }
  },
  "servers": [
    {
      "description": "Cuanmax RESTful API Server",
      "url": "https://{environment}.cuanmax.id/api/v1",
      "variables": {
        "environment": {
          "description": "Server Environment",
          "default": "prod",
          "enum": ["dev", "stag", "prod"]
        }
      }
    }
  ],
  "paths": {
    "/playlist": {
      "get": {
        "security": [
          {
            "jwt": []
          }
        ],
        "tags": ["playlist"],
        "summary": "Get all playlist",
        "description": "Get all playlist",
        "operationId": "getPlaylist",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array"
                }
              }
            }
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Palylist not found"
          }
        }
      },
      "post": {
        "summary": "Create new playlist",
        "description": "Create new playlist",
        "operationId": "createPlaylist",
        "security": [
          {
            "jwt": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Playlist name"
                  },
                  "description": {
                    "type": "string",
                    "description": "Playlist description"
                  },
                  "image": {
                    "type": "string",
                    "description": "Playlist image"
                  },
                  "songs": {
                    "type": "array",
                    "description": "Playlist songs",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Palylist not found"
          }
        }
      }
    }
  }
}
